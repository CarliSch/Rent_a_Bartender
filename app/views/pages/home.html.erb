<div class= "container pb-5">
  <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag "bar_image.jpg" , :alt => "Close picture of bottles", class:"d-block w-100 banner-image"%>
          <div class="carousel-caption">
            <a href="/bartenders">Show <strong>bartenders</strong></a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag "bartender.jpg", class:"d-block w-100 banner-image", :alt => "Picture of a bartender in action" %>
          <div class="carousel-caption">
            <a href="/bartenders">Show <strong>bartenders</strong></a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag "bottles.jpg", class:"d-block w-100 banner-image", :alt => "picture of bar with no people" %>
          <div class="carousel-caption">
            <a href="/bartenders">Show <strong>bartenders</strong></a>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag "shadows-of-bottles.jpg", class:"d-block w-100 banner-image", :alt => "picture of bar with no people" %>
          <div class="carousel-caption">
            <a href="/bartenders">Show <strong>bartenders</strong></a>
          </div>
        </div>
      </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="column col-4">
      <div class="form-inline search-bar">
        <%= form_tag bartenders_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a Bartender"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
